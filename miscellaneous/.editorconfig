[*.jsonc]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.less]
indent_size = 2

[*.html]
indent_size = 2

[*.sh]
indent_size = 2

[*.toml]
indent_size = 2

[*.ini]
indent_size = 2

[*.env]
indent_size = 2

[*.sol]
indent_size = 2

[*.mdx]
indent_size = 2

