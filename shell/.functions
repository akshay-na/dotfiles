      echo "‚îÇ                                              ‚îÇ"
      echo "‚îÇ   üåü New updates have been detected! üåü      ‚îÇ"
      echo "‚îÇ                                              ‚îÇ"
      echo "‚îÇ    Take a moment to review the changes:      ‚îÇ"
      echo "‚îÇ                                              ‚îÇ"
      echo "‚îî‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îò"

      # Show a summary of incoming changes for better user context
      echo "\nHere's a summary of new changes:"
      LOCAL=$(git rev-parse @)
      REMOTE=$(git rev-parse "@{u}")
