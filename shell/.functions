# -------------------------------------------------------------------------------
# Function: delete_branch
# Purpose: Delete a specified Git branch both locally and remotely.
# Usage: delete_branch <branch-name>
# -------------------------------------------------------------------------------
delete_branches() {
  if [ $# -eq 0 ]; then
    echo "Usage: delete_branches <branch1> [branch2] ..."
    return 1
  fi

  for branch in "$@"; do
    echo "Processing branch: '$branch'"

    # Check if the branch exists locally
    if git show-ref --verify --quiet "refs/heads/$branch"; then
      echo "  Deleting '$branch' locally..."
      git branch -d "$branch"
    else
      echo "  '$branch' does not exist locally."
    fi

    # Check if the branch exists on the remote repository
    if git ls-remote --heads origin "$branch" | grep "$branch" >/dev/null; then
      echo "  Deleting '$branch' on remote..."
      git push origin --delete "$branch"
    else
      echo "  '$branch' does not exist on remote."
    fi

    echo
  done
}

# -------------------------------------------------------------------------------
# Function: _delete_branches_completions
# Purpose: Provide tab completion for the delete_branches function.
# Usage: Internal function - automatically used by shell completion
# -------------------------------------------------------------------------------
_delete_branches_completions() {
  local cur="${COMP_WORDS[COMP_CWORD]}"
  # Retrieve all local branches.
  local branches=$(git branch --format='%(refname:short)' 2>/dev/null)
  # Generate completions from the list of local branches.
  COMPREPLY=($(compgen -W "${branches}" -- "$cur"))
}

# Enable tab-completion for the delete_branches command
if [ -n "$BASH_VERSION" ]; then
  # Bash completion
  complete -F _delete_branches_completions delete_branches
elif [ -n "$ZSH_VERSION" ]; then
  # Zsh completion
  compdef _delete_branches_completions delete_branches
fi

# -------------------------------------------------------------------------------
# Function: reload
# Purpose: Reload the shell configuration file for either Zsh or Bash.
# Usage: reload
# -------------------------------------------------------------------------------
reload() {
  if [ -n "$ZSH_VERSION" ]; then
    # Reload Zsh configuration
    source $HOME/.zshrc
    echo "Zsh configuration reloaded!"
  elif [ -n "$BASH_VERSION" ]; then
    # Reload Bash configuration
    source $HOME/.bashrc
    echo "Bash configuration reloaded!"
  else
    # Fallback for unknown shells
    echo "Unknown shell. Please reload your configuration manually."
  fi
}

# -------------------------------------------------------------------------------
# Function: extract
# Purpose: Extract various archive types based on file extension.
# Usage: extract <archive-file>
# -------------------------------------------------------------------------------
extract() {
  if [ -f "$1" ]; then
    case "$1" in
    *.tar.bz2) tar xjf "$1" ;; # Extract tar.bz2 archives
    *.tar.gz) tar xzf "$1" ;;  # Extract tar.gz archives
    *.bz2) bunzip2 "$1" ;;     # Extract bz2 files
    *.rar) unrar x "$1" ;;     # Extract rar archives
    *.gz) gunzip "$1" ;;       # Extract gz files
    *.tar) tar xf "$1" ;;      # Extract tar archives
    *.tbz2) tar xjf "$1" ;;    # Extract tbz2 archives
    *.tgz) tar xzf "$1" ;;     # Extract tgz archives
    *.zip) unzip "$1" ;;       # Extract zip files
    *.7z) 7z x "$1" ;;         # Extract 7z archives
    *) echo "Cannot extract '$1' (unsupported file type)" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

# -------------------------------------------------------------------------------
# Function: mkcd
# Purpose: Create a directory and immediately navigate into it.
# Usage: mkcd <directory-name>
# -------------------------------------------------------------------------------
mkcd() {
  mkdir -p "$1" && cd "$1"
}

# -------------------------------------------------------------------------------
# Function: kp
# Purpose: Kill a process by its name using grep and awk.
# Usage: kp <process-name>
# -------------------------------------------------------------------------------
kp() {
  local pid
  pid=$(ps aux | grep "$1" | grep -v grep | awk '{print $2}')
  if [ -n "$pid" ]; then
    kill -9 "$pid"
    echo "Killed process $pid"
  else
    echo "No process found matching '$1'"
  fi
}

# -------------------------------------------------------------------------------
# Function: touchf
# Purpose: Create a file and its parent directories if they don't exist.
# Usage: touchf <file-path>
# -------------------------------------------------------------------------------
touchf() {
  mkdir -p "$(dirname "$1")" && touch "$1"
}

# -------------------------------------------------------------------------------
# Function: fcd
# Purpose: Navigate to frequently accessed directories using Zoxide with interactive selection.
# Usage: fcd
# -------------------------------------------------------------------------------
fcd() {
  # Quickly navigate to frequently accessed directories using Zoxide
  local dir
  dir=$(zoxide query -i --exclude "$HOME") && cd "$dir"
}

# -------------------------------------------------------------------------------
# Function: store_bws_token
# Purpose: Helper function to encrypt and store BWS_ACCESS_TOKEN .
# Usage: store_bws_token
# -------------------------------------------------------------------------------
store_bws_token() {
  local token_file="$HOME/.local/share/bws/.bws_access_token.gpg"

  mkdir -p "$(dirname $token_file)"

  # Prompt user for token, hide input
  echo -n "Enter your BWS_ACCESS_TOKEN: "
  read -s BWS_ACCESS_TOKEN
  echo

  # Check input
  if [ -z "$BWS_ACCESS_TOKEN" ]; then
    echo "No token entered. Aborting."
    return 1
  fi

  # Remove existing token
  rm -rf $token_file

  # Encrypt and store token
  echo -n "$BWS_ACCESS_TOKEN" | gpg --symmetric --cipher-algo AES256 --s2k-digest SHA512 --s2k-mode 3 --s2k-count 650000 -o "$token_file"

  if [ $? -eq 0 ]; then
    echo "Token stored securely"
  else
    echo "Failed to store token."
    return 1
  fi
}

# -------------------------------------------------------------------------------
# Function: load_secrets
# Purpose: Load sensitive environment variables from Bitwarden Secret Manager.
# Usage: load_secrets
# -------------------------------------------------------------------------------
load_secrets() {
  BWS_ACCESS_TOKEN="$(gpg --quiet --decrypt $HOME/.local/share/bws/.bws_access_token.gpg)"

  if [ -n "$BWS_ACCESS_TOKEN" ]; then
    set -o allexport
    eval "$(bws secret list --access-token $BWS_ACCESS_TOKEN --output env)"
    set +o allexport
    echo "‚úÖ Secrets loaded and exported to current shell."
  else
    echo "‚ùå Could not find BWS_ACCESS_TOKEN in Keychain or secret-tool."
    return 1
  fi
}

# -------------------------------------------------------------------------------
# Function: evict_secrets
# Purpose: Remove all sensitive environment variables from the current shell.
# Usage: evict_secrets
# -------------------------------------------------------------------------------
evict_secrets() {
  BWS_ACCESS_TOKEN="$(gpg --quiet --decrypt $HOME/.local/share/bws/.bws_access_token.gpg)"

  if [ -n "$BWS_ACCESS_TOKEN" ]; then
    bws secret list --access-token $BWS_ACCESS_TOKEN --output env | cut -d= -f1 | while read -r var; do
      unset "$var"
    done
    echo "‚úÖ Secrets evicted from the current shell."
  else
    echo "‚ùå Could not find BWS_ACCESS_TOKEN in Keychain or secret-tool."
    return 1
  fi
}

# -------------------------------------------------------------------------------
# Function: exec_with_secrets
# Purpose: Execute a command with secrets loaded, then automatically evict them.
# Usage: exec_with_secrets <command>
# -------------------------------------------------------------------------------
exec_with_secrets() {
  local cmd_str="${@}"
  BWS_ACCESS_TOKEN="$(gpg --quiet --decrypt $HOME/.local/share/bws/.bws_access_token.gpg)"

  if [ -n "$BWS_ACCESS_TOKEN" ]; then
    bws run --access-token $BWS_ACCESS_TOKEN -- $cmd_str
  else
    echo "‚ùå Could not find BWS_ACCESS_TOKEN in Keychain or secret-tool."
    return 1
  fi
}

# -------------------------------------------------------------------------------
# Function: check_dotfiles_update
