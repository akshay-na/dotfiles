}

# -------------------------------------------------------------------------------
# Function: restart_gpg
# Purpose: Restart GPG agent and update startup TTY for proper operation.
# Usage: restart_gpg
# -------------------------------------------------------------------------------
restart_gpg() {
  gpgconf --kill gpg-agent
  gpgconf --launch gpg-agent
  gpg-connect-agent updatestartuptty /bye
  echo "‚úÖ GPG agent restarted and startup TTY updated."
}

