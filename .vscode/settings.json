{
  // ───────────────────────────────────────────────────────────────────────
  // UI & Theming
  // ───────────────────────────────────────────────────────────────────────
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.orientation": "vertical",
  "material-icon-theme.activeIconPack": "nest",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.list.smoothScrolling": true,
  "workbench.editor.empty.hint": "hidden",
  "editor.stickyScroll.enabled": true,
  "material-icon-theme.folders.associations": {
    "infrastructure": "Cluster",
    "stripe": "Resource"
  },

  // ───────────────────────────────────────────────────────────────────────
  // Editor Configuration
  // ───────────────────────────────────────────────────────────────────────
  "editor.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.renderWhitespace": "all",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlineSuggest.enabled": true,
  "editor.trimAutoWhitespace": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },

  // ───────────────────────────────────────────────────────────────────────
  // Terminal Configuration
  // ───────────────────────────────────────────────────────────────────────
  "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.enableMultiLinePasteWarning": "never",

  // ───────────────────────────────────────────────────────────────────────
  // File Management
  // ───────────────────────────────────────────────────────────────────────
  // Files Settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 10000,
  "window.confirmSaveUntitledWorkspace": false,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/._*": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true
  },
  "files.associations": {
    "*.sol": "solidity",
    ".gitconfig": "ini",
    "config": "ini",
    "*.env*": "dotenv",
    "*.eslintrc": "jsonc",
    "*.prettierrc": "jsonc",
    "*.babelrc": "jsonc",
    "*.stylelintrc": "jsonc",
    "*.toml": "toml",
    "*.yml": "yaml",
    "*.yaml": "yaml",
    "Dockerfile*": "dockerfile",
    "Jenkinsfile*": "groovy",
    "*.mdx": "markdown",
    "*.tsx": "typescriptreact",
    "*.jsx": "javascriptreact",
    "*.jsonc": "jsonc"
  },

  // ───────────────────────────────────────────────────────────────────────
  // Explorer Settings
  // ───────────────────────────────────────────────────────────────────────
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ───────────────────────────────────────────────────────────────────────
  // Extensions & Plugins
  // ───────────────────────────────────────────────────────────────────────
  "trailing-spaces.trimOnSave": true,
  "indenticator.color.dark": "#999",
  "indenticator.inner.color.dark": "#62fcb2",
  "search.useGlobalIgnoreFiles": true,
  "git.ignoreWindowsGit27Warning": true,
  "betterAlign.surroundSpace": {
    "colon": [0, 1],
    "assignment": [1, 1],
    "arrow": [1, 1],
    "comment": 2
  },

  // ───────────────────────────────────────────────────────────────────────
  // Formatting Configuration for Specific Languages
  // ───────────────────────────────────────────────────────────────────────

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[yml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[ini]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[config]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[plaintext]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[hosts]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[clojure]": {
    "editor.defaultFormatter": "betterthantomorrow.calva"
  },

  // ───────────────────────────────────────────────────────────────────────
  // Language-Specific Configurations
  // ───────────────────────────────────────────────────────────────────────
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.preferences.quoteStyle": "auto",
  "typescript.suggest.paths": true,
  "typescript.format.enable": false,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.disableAutomaticTypeAcquisition": false,
  "typescript.preferGoToSourceDefinition": true,
  "typescript.tsserver.enableRegionDiagnostics": false,
  "typescript.tsserver.log": "terse",
  "typescript.preferences.autoImportFileExcludePatterns": [
    "**/node_modules/**"
  ],

  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "project-relative",
  "javascript.suggest.paths": true,
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.format.enable": false,
  "javascript.format.semicolons": "insert",
  "javascript.preferGoToSourceDefinition": true,

  // ───────────────────────────────────────────────────────────────────────
  // Linting, Error Display & AI Assistance
  // ───────────────────────────────────────────────────────────────────────
  "errorLens.statusBarIconsEnabled": true,
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.fontSize": "90%",
  "errorLens.gutterIconsEnabled": true,
  "errorLens.gutterIconSize": "auto",
  "errorLens.messageMaxChars": 120,
  "errorLens.messageBackgroundMode": "line",
  "errorLens.scrollbarHackEnabled": false,
  "errorLens.followCursor": "allLines",
  "errorLens.gutterIconSet": "emoji",

  // ───────────────────────────────────────────────────────────────────────
  // GitHub Copilot Privacy & Security
  // ───────────────────────────────────────────────────────────────────────
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true
  },
  "github.copilot.advanced": {
    "enableTelemetry": false,
    "enableInlineSuggestions": true,
    "enableChat": false,
    "showEditorCompletions": true,
    "networkAccess": "limited"
  },

  // ───────────────────────────────────────────────────────────────────────
  // VS Code Telemetry & Data Collection
  // ───────────────────────────────────────────────────────────────────────
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.enableExperiments": false,
  "update.showReleaseNotes": false,

  // ───────────────────────────────────────────────────────────────────────
  // Security & Network Restrictions
  // ───────────────────────────────────────────────────────────────────────
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.untrustedFiles": "newWindow",
  "security.allowedUNCHosts": ["wsl.localhost"],
  "terminal.integrated.allowChords": false,
  "json.schemas": [],
  "security.workspace.trust.model": "disable",

  // ───────────────────────────────────────────────────────────────────────
  // Git & Remote Security
  // ───────────────────────────────────────────────────────────────────────
  "git.allowForcePush": false,
  "git.confirmSync": true,
  "git.suggestSmartCommit": false,
  "git.autofetch": false,
  "git.openRepositoryInParentFolders": "always",
  "remote.autoForwardPorts": false,
  "remote.restoreForwardedPorts": false,

  // ───────────────────────────────────────────────────────────────────────
  // General Privacy Settings
  // ───────────────────────────────────────────────────────────────────────
  "window.titleBarStyle": "custom",
  "editor.suggestSelection": "first",
  "editor.suggest.showWords": false,
  "files.trimTrailingWhitespace": true,

  // ───────────────────────────────────────────────────────────────────────
  // Other Configurations
  // ───────────────────────────────────────────────────────────────────────
  "crypto-ticker.period": "HOUR",
  "makefile.configureOnOpen": true,

  "evenBetterToml.formatter.alignComments": true,
  "evenBetterToml.formatter.alignEntries": true,

  "turboConsoleLog.addSemicolonInTheEnd": true,
  "turboConsoleLog.includeFilename": true,
  "turboConsoleLog.includeLineNum": true,

  "projectManager.showProjectNameInStatusBar": true,
  "projectManager.openInNewWindowWhenClickingInStatusBar": true,
  "projectManager.cacheProjectsBetweenSessions": true,
  "projectManager.openInCurrentWindowIfEmpty": "always",
  "projectManager.tags": [
    "Active",
    "Work",
    "Personal",
    "Freelance",
    "Open Source",
    "Learning",
    "Archived"
  ],

  "better-comments.tags": [
    // ❗ Critical Issues / Warnings
    {
      "tag": "!",
      "color": "#FF2D00", // Bright Red for high-priority warnings
      "strikethrough": false,
      "bold": true
    },

    // ❓ Questions / Review Notes
    {
      "tag": "?",
      "color": "#3498DB", // Blue for questions
      "strikethrough": false,
      "bold": true
    },

    // ✅ To-Do Tasks
    {
      "tag": "TODO",
      "color": "#FF8C00", // Orange for to-do tasks
      "strikethrough": false,
      "bold": true
    },

    // 🔧 Fixes / Issues
    {
      "tag": "FIXME",
      "color": "#FF4500", // Bright Orange-Red for fixes
      "strikethrough": false,
      "bold": true
    },

    // 📝 Notes / Explanations
    {
      "tag": "NOTE",
      "color": "#00BFFF", // Light Blue for general notes
      "strikethrough": false,
      "italic": true
    },

    // 🔍 Debugging Logs
    {
      "tag": "DEBUG",
      "color": "#FFD700", // Gold/Yellow for debugging
      "strikethrough": false,
      "bold": true
    },

    // ⚡ Performance Optimizations
    {
      "tag": "PERF",
      "color": "#32CD32", // Green for performance-related comments
      "strikethrough": false,
      "bold": true
    },

    // ⚠️ Deprecated Code / Warnings
    {
      "tag": "DEPRECATED",
      "color": "#D2691E", // Brown for deprecated code warnings
      "strikethrough": true,
      "bold": true
    },

    // ✨ Important Highlights
    {
      "tag": "*",
      "color": "#98C379", // Soft green for emphasis
      "strikethrough": false,
      "bold": true
    },

    // 🗑️ Unused Code / Commented-Out Code
    {
      "tag": "//",
      "color": "#474747", // Gray for commented-out sections
      "strikethrough": true,
      "bold": false
    }
  ],

  // Cursor AI Specific Settings
  "cursor.cpp.disabledLanguages": ["plaintext"],
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.general.globalCursorIgnoreList": [
    "**/.env",
    "**/.env.*",
    "**/.npmrc",
    "**/credentials.json",
    "**/credentials.*.json",
    "**/secret.json",
    "**/secrets.json",
    "**/*.key",
    "**/*.pem",
    "**/*.pfx",
    "**/*.p12",
    "**/*.crt",
    "**/*.cer",
    "**/id_rsa",
    "**/id_dsa",
    "**/.ssh/id_*",
    "**/.gnupg/private*",
    "**/config/*.local.js",
    "**/config/*.local.json",
    "**/vault/**",
    "**/*.asc",
    "**/secrets.yaml",
    "**/secrets.yml",
    "**/private.key",
    "**/*.bak",
    "**/*.tmp",
    "**/*.swp",
    "**/*.swo",
    "**/*.log",
    ".git/**",
    ".hg/**",
    ".vscode/**",
    ".idea/**",

    // Node.js
    "**/node_modules/**",
    "**/.next/**",
    "**/.nuxt/**",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/pnpm-lock.yaml",

    // Java
    "**/*.class",
    "**/*.jar",
    "**/*.war",
    "**/*.ear",
    "**/*.jks",
    "**/target/**",
    "**/build/**",

    // Clojure
    "**/.cpcache/**",
    "**/.clj-kondo/**",
    "**/.shadow-cljs/**",
    "**/out/**",

    // System sensitive files
    "**/Thumbs.db",
    "**/desktop.ini",
    "**/.DS_Store",
    "**/lost+found/**",
    "**/System Volume Information/**",
    "/etc/passwd",
    "/etc/shadow",
    "/etc/hosts",
    "/etc/group",
    "/etc/gshadow",
    "/var/log/**"
  ]
}
